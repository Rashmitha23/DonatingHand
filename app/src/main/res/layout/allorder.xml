<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"

        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/na"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :-"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_toRightOf="@id/na"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/allordername"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :-"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_toRightOf="@id/nda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/allorderdate"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ndq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quntity :-"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_toRightOf="@id/ndq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/allquntity"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :-"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_toRightOf="@id/nd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/allordertime"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>